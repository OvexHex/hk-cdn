# CDN Server Configuration

# Server Settings
CDN_PORT=3005
CDN_HOST=0.0.0.0

# IMPORTANT: Set this to your actual directory path
# Example for your setup:
# CDN_ROOT_DIR=/home/z/Doc/P/alia-birthday-gift/public
# Or for relative path:
# CDN_ROOT_DIR=./public
CDN_ROOT_DIR=

# Rate Limiting
CDN_RATE_LIMIT_MAX=1000

# CORS Settings
# Use '*' to allow all origins, or specify specific origins:
# CDN_CORS_ORIGIN=https://yourdomain.com
CDN_CORS_ORIGIN=*

# Logging
CDN_LOG_LEVEL=info

# Environment
NODE_ENV=production
